#!/bin/bash

function run_n_measure
{
   /usr/bin/time -f "\n\ntime: %E\nmemory: %MKb" $1 $2 $3 $4 $5 $6 $7 
}

if [ $# = 0 ]
then
  set $1 'rd'
fi

case $1 in

'rd' ) run_n_measure build/release/debruijn/debruijn configs/debruijn/config.info $2 $3 $4 $5 ;;
'dd' ) run_n_measure build/debug/debruijn/debruijn configs/debruijn/config.info $2 $3 $4 $5 ;;
'rdt' ) run_n_measure build/release/test/debruijn/debruijn_test $2 $3 $4 $5 ;;

* ) run_n_measure $1 $2 $3 $4 $5

esac


