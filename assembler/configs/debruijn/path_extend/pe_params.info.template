	}    

	mate_pair_options
	{
	 	read_count {
		    weight_threshold           0.2
		    priority_coeff             3
		}
	 	path_cover  {
		    single_threshold	       0.001
		    weight_threshold           0.5
		    priority_coeff             1.5
		}
	    
		try_deep_search		false
	}

	scaffolder {
 		on	          true
		cutoff        2
		rel_cutoff    0.1
		sum_threshold 3  

		cluster_info  true
		cl_threshold  0

		fix_gaps true
        min_gap_score  0.7

		max_must_overlap  0.5
	    max_can_overlap   0.5
	    short_overlap     6
	    artificial_gap    10
	}
	
	; loops removal
	loop_removal
	{
	    inspect_short_loops true

	    max_loops           30
	    full_loop_removal   true
	}
	

	; filter options
	filter_options
	{
	    remove_overlaps     true
