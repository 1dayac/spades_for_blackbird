SPADES_SHARE = $(DESTDIR)/usr/share/spades/
SPADES_SRC = $(SPADES_SHARE)/src/
SPADES_CONFIGS = $(SPADES_SHARE)/configs/

build:
	make --directory=src/tools/quality/libs/MUMmer3.23

install:
	mkdir -p $(SPADES_SHARE)
	mkdir -p $(DESTDIR)/usr/bin
	cp spades.py $(DESTDIR)/usr/bin/
	cp makefile $(SPADES_SHARE)
	cp README $(SPADES_SHARE)
	cp VERSION $(SPADES_SHARE)
	cp LICENSE $(SPADES_SHARE)
	cp spades_config.info.template $(SPADES_SHARE)
	cp spades_config.info $(SPADES_SHARE)
	cp -r configs $(SPADES_SHARE)
	cp -r ext $(SPADES_SHARE)
	cp -r src $(SPADES_SHARE)
	cp -r test_dataset $(SPADES_SHARE)

