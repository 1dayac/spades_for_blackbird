; additional etalon libs
etalon_libs
{    
    count  1
    item_0
    {
        read_size    100
        insert_size  800
    }
    item_1
    {
        read_size    100
        insert_size  2100
    }	
}

; output options
write_seeds             true 
write_overlaped_paths   true
write_paths             true
write_contigs           true
write_real_paired_info  true
cluster_paired_info     false
paired_info_file_prefix "paired_info_"

; seed selection
ss
{
    min_coverage   150
    glue_seeds     false
}

; extension selection
es
{
    use_weight_function_first  false
    weight_fun_threshold       0
    weight_threshold           0

    use_delta_first       false
    real_distance_dev     25
    etalon_distance_dev   2
}    

; loops removal
lr
{
    max_loops          5
    full_loop_removal  true
}

; stop criteria
sc
{
    all_seeds       true
    edge_coverage   0.8
    len_coverage    0.99
}

; filter options
fo
{
    remove_duplicates_only  false
    remove_overlaps         false
}